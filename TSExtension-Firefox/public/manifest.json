{
  "manifest_version": 2,
  "name": "ListRoller",
  "version": "0.1",

  "description": "Adds common AniList shortcuts in the right click menu of your browser. Like adding the selected title of an anime to your watch list",

  "icons": {
    "48": "ExtensionIcon.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{fe3a4468-71c2-4a96-b91d-1722ee55d243}"
    }
  },

  "permissions": ["storage", "menus", "notifications"],

  "browser_action": {
    "default_icon": "ExtensionIcon.png",
    "default_popup": "./html/popup.html"
  },

  "background": {
    "scripts": ["anilistextensions.js"]
  }
}